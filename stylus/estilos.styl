@import "nib"
//para usar nib debo instalarlo primero como se dice en archivo de como compilar stylus
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz official
//animacion(parametro)
//	-webkit-animation parametro
//	-moz-animation parametro
//	-o-animation parametro
//	-ms-animation parametro
//	animation parametro





gris_oscuro=#333333
gris_claro=#BDBDBD
rojo=#BD255B
gris_mas_claro=#F0F0F0
a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	color gris_oscuro
	position absolute
	top 50%
	margin-top -10px
	left .5em

//oocss class
.container 
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	margin-right: .5em
	font-size 1.4em
	&:last-child
		margin-right 0
	&.gray
		color gris_oscuro

.actions
	position absolute
	bottom 0
	left 0
	right 0 
	background rgba(black,.3) //stylus
	/*background rgba(0,0,0,.3)*/

.name
	color gris_oscuro

.author
	color gris_claro

.center-block
	margin 0 auto

.right-text
	text-align right 

.center-text
	text-align center

.relative
	position relative

.padding
	padding 1em

.padding-tb
	padding 1em 0 //arriba abajo , izq der

.left
	float left

.right
	float right

.progress
	margin 1em 0
	position relative

	.min
	.max
		font-size .8em
		top -5px
		position absolute

	.min
		left 0
	.max
		right 0
	.total
		height 5px
		background gris_claro
		width 75%
		border-radius 5px
		margin 0 auto
	.state
		height 5px
		background rojo
		width 30%
		position relative
		border-radius 5px
		//animacion 1s state infinite //sin nib
		animation 250s state infinite linear
	.circle
		width 10px
		height 10px
		background gris_oscuro
		border-radius 50%
		position absolute
		right 0
		top -2px
		//animacion 1s circle infinite //sin nib
		animation 1s circle infinite

//animacion con keyframes
@keyframes state
	0%
		width 0
	100%
		width 100%
@keyframes circle
	0%
		-webkit-transform scale(1)		
	100%
		-webkit-transform scale(2)
		opacity 0

.menu
	display none /*oculta los elementos*/
.border-bottom
	border-bottom 1px solid gris_claro

.relative
	position relative

.header
	height 3.5em
	//a 
	//display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.wrap
	width 1000px


.round
	border-radius 50%
	overflow hidden

.song
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left 
	width 8rem
	&:nth-child(even)
		margin-right 0
		/*even busca a los pares, el simbolo & permite evitar repetir .song puesto que ya estamos poniendo propiedades de ella*/
	p
		margin .5em 0

.playing	
	&.small
		width 20em
		margin 0 auto

.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
	margin-right 5px

.icon-search
	position absolute
	left .5em
	top .8em
	color gris_claro

.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

.playlist
		display none
		width 22em
		padding 0 2em
		border-left 1px solid gris_claro
		.list //list que esta dentro de playlist
			list-style none
		.item 
			padding 1em 0
		.action
			font-size 14px
			color gris_claro

	.isotipo
		width 122px
	.logo
		display none
		background white
		padding 1.3em 0
		overflow hidden
	.avatar
		width 38px
		height 38px
	.username
		
		color gris_claro
		position relative
		top 10px
		margin-left .5em
		&:after
			content""
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			display inline-block
			margin-left .4em


/*mediaquerys*/

@media screen and (min-width:480px)

	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			
	.playing
		&.medium
			width 100%
			height auto

	
/*mediaquerys desktop*/

@media screen and (min-width:1000px)
	body 
		background gris_mas_claro
	.button-menu
		display none
	.playing 
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				cursos pointer
				padding 1em
				display block
				border-top 5px solid gris_mas_claro
				&:hover
					border-top 5px solid gris_claro

	.music
		width 32.5em
		float left
	.description
		display none

	.header
		border none
		height auto
		.title
			display none
	.logo
	.playlist
		display block
	
	//animaciones

